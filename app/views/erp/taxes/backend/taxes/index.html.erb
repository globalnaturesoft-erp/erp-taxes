<% content_for :title do %>
    <%= t('.taxes') %>
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-file-text-o"></i> <%= t('.taxes') %>
<% end %>

<% content_for :page_toolbar do %>
    <%=
        erp_component('button/create', {
            text: t('.create'),
            href: erp_taxes.new_backend_tax_path,
            class: 'btn-noborder'
        }) if can? :creatable, nil
    %>
<% end %>

<%
    actions = []
    
    actions << {
        text: '<i class="fa fa-eye-slash"></i> '+t('archive'),
        url: erp_taxes.archive_all_backend_taxes_path,
        data_method: 'PUT',
        data_confirm: t('.archive_confirm')
    } if false
    
    actions << {
        text: '<i class="fa fa-eye"></i> '+t('unarchive'),
        url: erp_taxes.unarchive_all_backend_taxes_path,
        data_method: 'PUT',
        data_confirm: t('.unarchive_confirm')
    } if false
%>

<%= erp_datalist(
    url: erp_taxes.list_backend_taxes_path,
    keywords: [
        {
            text: t('.keyword'), name: 'search_name'
        },
        {
            text: t('creator'),
            name: 'erp_users.name',
            select: {
                name: 'erp_users.id',
                data_url: erp.dataselect_backend_users_path
            }
        }
    ],
    actions: actions,
    filters: [
        {
            text: t('.sales'), name: 'scope', value: Erp::Taxes::Tax::TAX_SCOPE_SALES, checked: false
        },
        {
            text: t('.purchases'), name: 'scope', value: Erp::Taxes::Tax::TAX_SCOPE_PURCHASES, checked: false
        },
        {
            text: t('.others'), name: 'scope', value: Erp::Taxes::Tax::TAX_SCOPE_OTHERS, checked: false
        },
        {
            divider: true
        },
        {
            text: t('.fixed'), name: 'computation', value: Erp::Taxes::Tax::TAX_COMPUTATION_FIXED, checked: false
        },
        {
            text: t('.percentage_of_price'), name: 'computation', value: Erp::Taxes::Tax::TAX_COMPUTATION_PRICE, checked: false
        },
        {
            divider: true
        },
        {
            text: t('.active'), name: 'erp_taxes_taxes.status', value: Erp::Taxes::Tax::STATUS_ACTIVE, checked: true
        },
        {
            text: t('.deleted'), name: 'erp_taxes_taxes.status', value: Erp::Taxes::Tax::STATUS_DELETED, checked: false
        }
    ],
    columns: [
        {
            text: t('.name'), name: 'name', value: true, checked: true
        },
        {
            text: t('.short_name'), name: 'short_name', value: true, checked: true
        },
        {
            text: t('.scope'), name: 'scope', value: true, checked: true
        },
        {
            text: t('.amount'), name: 'amount', value: true, checked: true
        },
        {
            text: t('.computation'), name: 'computation', value: true, checked: true
        },
        {
            text: t('status'), name: 'status', value: true, checked: true
        },
        {
            text: t('creator'), name: 'creator', value: true, checked: false
        },
        {
            text: t('updated_at'), name: 'updated_at', value: true, checked: true
        },
        {
            text: t('created_at'), name: 'created_at', value: true, checked: false
        }
    ],
    sort: { sort_by: 'erp_taxes_taxes.updated_at', sort_direction: 'desc' }
) %>    