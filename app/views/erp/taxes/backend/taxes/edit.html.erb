<% content_for :title do %>
    <%= @tax.name %>
<% end %>

<% content_for :page_title do %>    
    <a href="<%= erp_taxes.backend_taxes_path %>">
    <i class="fa fa-file-text-o"></i> <%= t('.taxes') %>
    </a> / <%= @tax.name %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_taxes.new_backend_tax_path,
        class: 'btn-noborder'
    }) %>
<% end %>

<div class="row">
    <div class="col-md-6">
        <% if @tax.errors.any? %>
            <%= erp_form_control("form_error_message") %>
        <% end %>
        
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-body">
                <%= render 'form', tax: @tax %>
            </div>
        </div>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>