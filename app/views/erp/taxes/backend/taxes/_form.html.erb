<%= form_for([erp_taxes, :backend, tax]) do |f| %>    
    <%= erp_form_control("text", {
        name: 'tax[name]',
        value: tax.name,                   
        label: t('.name'),
        required: true,
        errors: tax.errors.full_messages_for(:name)
    }) %>
    <%= erp_form_control('select', {
        label: t('.tax_scope'),
        name: 'tax[scope]',
        value: tax.scope,
        options: Erp::Taxes::Tax.get_tax_scope_options(),
        required: true,
        errors: tax.errors.full_messages_for(:scope)
    }) %>
    <%= erp_form_control('select', {
        label: t('.computation'),
        name: 'tax[computation]',
        value: tax.computation,
        options: Erp::Taxes::Tax.get_tax_computation_options(),
        required: true,
        errors: tax.errors.full_messages_for(:computation)
    }) %>
    <%= erp_form_control("text", {
        name: 'tax[amount]',
        value: tax.amount,                   
        label: t('.amount'),
        required: true,
        errors: tax.errors.full_messages_for(:amount)
    }) %>
    <%= erp_form_control("text", {
        name: 'tax[short_name]',
        value: tax.short_name,                   
        label: t('.short_name')
    }) %>
    <hr>
    <%= erp_component('button/save', {
        text: t('.submit')
    }) %>
    <%= erp_component('button/cancel', {
        text: t('.cancel'),
        href: erp_taxes.backend_taxes_path
    }) %>
<% end %>