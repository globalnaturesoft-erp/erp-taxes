<table class="table table-advance table-hover table-striped table-checkable order-column">
    <thead>
        <tr>
            <th width='1%'>
                <%= erp_datalist_check_all %>
            </th>
            <% if get_columns(params).include?("name") %>
                <th class="sortable" sort-by='erp_taxes_taxes.name'>
                    <%= t('.name') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("short_name") %>
                <th class="sortable" sort-by='erp_taxes_taxes.short_name'>
                    <%= t('.short_name') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("scope") %>
                <th>
                    <%= t('.scope') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("amount") %>
                <th>
                    <%= t('.amount') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("computation") %>
                <th>
                    <%= t('.computation') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("status") %>
                <th>
                    <%= t('status') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("creator") %>
                <th>
                    <%= t('creator') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("updated_at") %>
                <th class="sortable" sort-by='erp_taxes_taxes.updated_at'>
                    <%= t('updated_at') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("created_at") %>
                <th class="sortable" sort-by='erp_taxes_taxes.created_at'>
                    <%= t('created_at') %>
                </th>
            <% end %>
            <th width="7%"><%= t('actions') %></th>
        </tr>
    </thead>
    <tbody>
        <% @taxes.each do |tax| %>
            <tr class="<%= 'blurred' if tax.is_deleted? %> odd gradeX">
                <td>
                    <%= erp_datalist_check_row(id: tax.id) %>
                </td>
                <% if get_columns(params).include?("name") %>
                    <td><%= tax.name %></td>
                <% end %>
                <% if get_columns(params).include?("short_name") %>
                    <td><%= tax.short_name %></td>
                <% end %>
                <% if get_columns(params).include?("scope") %>
                    <td><%= t(".scope_#{tax.scope}") %></td>
                <% end %>
                <% if get_columns(params).include?("amount") %>
                    <td><%= tax.amount %></td>
                <% end %>
                <% if get_columns(params).include?("computation") %>
                    <td>
                        <%= t(".#{tax.computation}") %>
                    </td>
                <% end %>
                <% if get_columns(params).include?("status") %>
                <td>
                    <%= status_label(tax.status) %>
                </td>
                <% end %>
                <% if get_columns(params).include?("creator") %>
                    <td>
                        <%= erp_component('avatar', {
                            user: tax.creator
                        }) %>
                    </td>
                <% end %>
                <% if get_columns(params).include?("updated_at") %>
                    <td><%= tax.updated_at.strftime("%d/%m/%Y") %></td>
                <% end %>
                <% if get_columns(params).include?("created_at") %>
                    <td><%= tax.created_at.strftime("%d/%m/%Y") %></td>
                <% end %>
                <td>
                    <%= tax_dropdown_actions(tax) %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>
<% if @taxes.empty? %>
    <div class="datalist-empty-line"><%= t('.no_matching_records_found') %></div>
<% end %>
        
<%= erp_datalist_pagination(@taxes) %>